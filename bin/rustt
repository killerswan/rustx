#!/bin/bash

usage() {
   echo "Usage: $(basename "$0") source.rs"
   echo "Compile and run a Rust program's tests"
}

SOURCE="$1"
SOURCE_BASE="$(basename "$SOURCE")"

if [[ "$SOURCE" == "-" ]]
then
   SOURCE="/dev/fd/0"
fi

if [[ ! -p "$SOURCE" ]] && [[ ! "${SOURCE_BASE#*.}" == "rs" ]]
then
   usage
   exit 1
fi

TORUN="$(mktemp -t rustt.XXXXXXXXXX)"

shift 1

if [[ ! -r "$SOURCE" ]]
then
   usage
   exit 1
fi

rustc -L . --test -o "$TORUN" "$SOURCE" \
   && exec "$TORUN" $@


